<Window
    x:Class="HospitalManagementSystem.Views.Dialogs.PatientDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HospitalManagementSystem.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Title"
    Width="600"
    Height="650"
    ResizeMode="NoResize"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.ColumnSpan="6"
            HorizontalAlignment="Center"
            Content="Patient Details"
            FontSize="24"
            FontWeight="SemiBold" />

        <TextBox
            x:Name="IdInput"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Height="40"
            Margin="20,0"
            Padding="10"
            md:HintAssist.Hint="id"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        <TextBox
            x:Name="FirstNameInput"
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Height="40"
            Margin="20,0"
            Padding="10"
            md:HintAssist.Hint="Enter First Name"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        <TextBox
            x:Name="LastNameInput"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Height="40"
            Margin="20,0"
            Padding="10"
            md:HintAssist.Hint="Enter Last Name"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        <TextBox
            x:Name="PhoneNumberInput"
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="3"
            Height="40"
            Margin="20,0"
            Padding="10"
            md:HintAssist.Hint="Enter Phone Number"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        <DatePicker
            x:Name="DateTimeInput"
            Grid.Row="1"
            Grid.Column="3"
            Grid.ColumnSpan="3"
            Height="40"
            Margin="20,0"
            Padding="10"
            md:HintAssist.Hint="Choose birthdate"
            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
        <ComboBox
            x:Name="GenderCombobox"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="3"
            Height="40"
            Margin="20,0"
            Padding="10"
            md:HintAssist.Hint="Select a gender"
            Style="{StaticResource MaterialDesignOutlinedComboBox}" />

        <Button
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Width="200"
            Height="35"
            Margin="20,0"
            Click="Cancel_Clicked"
            Content="Cancel"
            Style="{StaticResource MaterialDesignPaperDarkButton}" />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            Grid.ColumnSpan="3"
            Width="200"
            Height="35"
            Margin="20,0"
            Background="#2ec96f"
            BorderBrush="#2ec96f"
            Click="Save_Clicked"
            Content="Save" />
    </Grid>
</Window>
